<html lang="en">
<head>
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css') }}">
    <title>Edit Favorite Log</title>
</head>

<h1> Edit Log</h1>
<form id="editLog" action="/edit_log/{{data[0].log_id}}" method="POST">
			
			<fieldset>
				<input type="hidden" value="{{data[0].log_id}}" class="form-control" id="logID" name="logID" required>
				<div>ID: {{data[0].log_id}}</div>
            <div>
                <label for="email">Email:</label>
                <input type="email" value="{{data[0].user_email}}" id="email" name="email" required>
            </div>
            <div>
                <label for="routine_name">Routine</label>
                <select id="routine_name" name="routine_name">
                {% for routine in routines %}
                    <option value="{{ routine.get('routine_name') }}">{{ routine.get('routine_name') }}</option>
                {% endfor %}
                </select>
            </div>
            <div>
                <input type="submit" value="Save" name="Edit_Log">
            </div>
        </form>