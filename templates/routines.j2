<h2>Routines</h2>
<table>
    <thead>
    <tr>
        <!-- Iterate through each key in the first entry to get the
        column name -->
        {% for key in data[0].keys() %}

        <!-- Create a <th> tag with the key inside of it, this will be
        our header row -->
        <th>{{ key }}</th>

        <!-- End of this for loop -->
        {% endfor %}
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    <tbody>

    <!-- Now, iterate through every person in  -->
    {% for person in data %}
    <tr>
        <!-- Then iterate through every key in the current person dictionary -->
        {% for key in person.keys() %}
            {% if key == 'Video Link' %}
                <td><a href="{{person[key]}}"> Video </a> </td>
            {% else %}
                <td>{{person[key]}}</td>
            {% endif %}
        {% endfor %}
        <td><a href="edit_user/{{person.get('ID')}}">Edit</a></td>
        <td><a href="delete_user/{{person.get('ID')}}">Delete</a></td>
    </tr>
    
    {% endfor %}
    
    </table>
</body>